{
  "hosting": {
    "public": "dist/apps/front",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=180" },
          { "key": "X-XSS-Protection", "value": "1; mode=block" },
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "Access-Control-Allow-Origin", "value": "*" }
        ]
      },
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css|ico)",
        "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|ico|svg|css|js|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "*.@(jpg|jpeg|gif|png|ico|svg|css|js|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "./@(service-worker.js|manifest.json)",
        "headers": [
          { "key": "Content-Type", "value": "text/javascript; charset=utf-8" },
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      },
      {
        "source": "**/*.svg",
        "headers": [{ "key": "Content-Type", "value": "image/svg+xml; charset=utf-8" }]
      }
    ]
  }
}
